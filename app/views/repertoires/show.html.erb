<div class=" pt-28"></div>
<h1>Mettre un search bar ici</h1>
<%= form_with url: repertoire_user_path, method: :get, class: "flex flex-col justify-center space-y-2" do %>
        <%= text_field_tag :first_name,
                params[:first_name],
                class: "form-control text-black font-light text-xs mx-9 h-7 rounded border-none shadow-sm",
                placeholder: "Select Country"
            %>
        <%= text_field_tag :last_name,
                params[:last_name],
                class: "form-control text-black font-light text-xs mx-9 h-7 rounded border-none shadow-sm",
                placeholder: "Select State"
            %>
            <div class="flex justify-center pt-1 pb-2">
                <%= submit_tag "Search", name: "", class: "bg-TapCard-blue rounded-xl px-4 py-1 text-xs" %>
            </div>
        <% end %>

<ul class="capitalize border-y px-6 py-4 text-lg">
    <% @contact_groups.each do |group| %>
        <li>
            <p><%= group.name %></p>
        </li>
    <% end %>    
</ul>