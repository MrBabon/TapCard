<div class="hidden sm:block">
    <% if current_user.admin || current_user.entrepreneurs? || current_user.director? %>
        <div class="flex w-full justify-between font-jost font-semibold items-center pt-8 pb-16 pl-3 bg-TapCard-teal">
            <%= link_to settings_user_path(current_user) do %>
                <i class="fa-sharp fa-solid fa-gear text-TapCard-lightGray/50"></i>
            <% end %>
            <div class="flex-1 text-center mr-3">
                <h2 class="mx-auto text-TapCard-lightGray uppercase">Your account</h2>
            </div>
            <div class="w-5"></div>
        </div>
        <div class="flex items-center justify-center space-x-7 m-4">
            <div class="flex justify-center">
                <% if current_user.avatar.attached? %>
                    <%= cl_image_tag current_user.avatar.key, alt: "Avatar to #{current_user.first_name}", class: "rounded-full object-cover object-center w-32 h-32 border shadow-md" %>
                <% else %>    
                    <%= image_tag("avatar.svg", class: "rounded-full w-32 h-32 bg-cover bg-center border shadow-md") %>
                <% end %>
            </div>
            <div class="block justify-center">
                <h2 class="font-jost text-TapCard-silver text-center text-xl mb-1"><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></h2>
                <div class="flex items-center space-x-2 text-xs justify-center mb-1">
                    <i class="fa-solid fa-phone text-TapCard-blue"></i>
                    <span class=" font-light"><%= current_user.phone %></span>
                </div>
                <div class="flex items-center space-x-2 text-xs justify-center mb-1">
                    <i class="fa-regular fa-envelope text-TapCard-blue"></i>
                    <span class=" font-light"><%= current_user.email %></span>
                </div>
                <% if current_user.website.present? %>
                    <div class="flex items-center space-x-2 text-xs justify-center">
                        <i class="fa-solid fa-globe text-TapCard-blue"></i>            
                        <span class=" font-light"><%= current_user.website %></span>
                    </div>
                <% end %>
                <div class="flex justify-evenly items-center mt-1">
                    <% if current_user.twitter.present? %>
                        <a href="https://<%= current_user.twitter %>" target="_blank"><i class="fa-brands fa-x-twitter"></i></a>
                    <% end %>
                    <% if current_user.linkedin.present? %>
                        <a href="https://<%= current_user.linkedin %>" target="_blank"><i class="fa-brands fa-linkedin"></i></a>               
                    <% end %>
                    <% if current_user.facebook.present? %>
                        <a href="https://<%= current_user.facebook %>" target="_blank"><i class="fa-brands fa-facebook"></i></a>                
                    <% end %>
                    <% if current_user.instagram.present? %>
                        <a href="https://<%= current_user.instagram %>" target="_blank"><i class="fa-brands fa-instagram"></i></a>   
                    <% end %>
                </div>
            </div>
            <div>
                <div class="flex justify-center items-center space-x-2">
                    <% if current_user.admin %>
                        <div class="flex justify-center">
                            <%= link_to "Dashboard Admin", rails_admin_path, class: "px-5 py-2 mb-4 text-xs  rounded outline outline-2 outline-green-500 text-green-500 font-semibold hover:bg-green-500 hover:text-TapCard-lightGray" %>
                        </div>
                    <% end %>
                    <% if current_user.entrepreneurs? %>
                        <div class="flex justify-center">
                            <%= link_to "Dashboard Entreprise", edit_entreprise_path(@entreprise), class: "px-5 py-2 mb-4 text-xs  rounded outline outline-2 outline-green-500 text-green-500 font-semibold hover:bg-green-500 hover:text-TapCard-lightGray" %>
                        </div>
                    <% end %>
                    <% if current_user.director? %>
                        <div class="flex justify-center">
                            <%= link_to "Dashboard Organization", rails_admin_path, class: "px-5 py-2 mb-4 text-xs  rounded outline outline-2 outline-green-500 text-green-500 font-semibold hover:bg-green-500 hover:text-TapCard-lightGray" %>
                        </div>
                    <% end %>
                </div>
                    <div class="flex justify-start ">
                        <%= link_to "Déconnexion", destroy_user_session_path, data: {turbo_method: :delete}, class: "px-5 py-2 mb-4 text-xs  rounded outline outline-2 outline-red-500 text-red-500 font-semibold hover:bg-red-500 hover:text-TapCard-lightGray" %>
                    </div>
            </div>
        </div>
        <div class="border-2 border-TapCard-yellow"></div>
        <div class="m-3">
            <h5 class=" text-TapCard-charcoal font-semibold"><%= current_user.job %></h5>
            <p class="text-TapCard-teal font-light text-sm"><%= User.industries[current_user.industry] %></p>
            <p class="text-TapCard-charcoal text-sm font-light"><%= current_user.biography %></p>
        </div>
    <% end %>
</div>
