<% if user_signed_in? %>
  <div class="flex justify-evenly items-center fixed bottom-0 w-full text-2xl z-50 bg-TapCard-yellow py-2" data-controller="button-footer">
    <%= link_to events_path(current_user) do %>
        <i class="fa-solid fa-calendar-day" data-button-footer-target="icon"></i>
    <% end %>
    <%= link_to user_path(current_user) do %>
        <i class="fa-solid fa-users-between-lines" data-button-footer-target="icon"></i>
    <% end %>
    <%= link_to user_path(current_user) do %>
        <i class="fa-regular fa-user" data-button-footer-target="icon"></i>
    <% end %>
    <%= link_to user_path(current_user) do %>
        <i class="fa-solid fa-qrcode" data-button-footer-target="icon"></i>
    <% end %>
