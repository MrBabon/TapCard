<div class="my-8 ml-3 md:hidden">
  <%= link_to root_path do %>
    <%= image_tag "chevron-left.svg", alt: "chevron", class: "w-5" %>
  <% end %>
</div>
<div class="md:flex">
  
  <div class="hidden bg-banner-home bg-center bg-cover h-[80vh] md:block md:h-[100vh] md:w-1/2 lg:w-2/3">
    <h1 class="flex items-center justify-center text-TapCard-charcoal text-3xl h-[80vh] uppercase md:hidden">Digicard</h1>
  </div>
  <div class="md:w-1/2 lg:w-1/3">
    <div class="hidden md:flex md:flex-col justify-center text-TapCard-gray">
      <h1 class="md:flex md:flex-col md:uppercase md:text-5xl xl:text-7xl md:font-semibold mx-auto mb-8 mt-7 relative space-y-12 tracking-wide">Digicard
          <span class="font-jost capitalize text-2xl font-medium absolute top-10 left-[3px] tracking-widest xl:text-4xl xl:top-16">Entreprise</span>
          <span class=" border-b-2 border-TapCard-yellow w-[50%] pt-4"></span>
          <div class="inline relative">
            <%= link_to root_path do %>
              <p class="inline-block text-xs capitalize absolute tracking-normal text-TapCard-silver font-normal"><i class="fa-solid fa-arrow-left"></i> Back</p>
            <% end %>
          </div>
      </h1>
    </div>
    <%# phone %>
    <div class="flex items-center justify-center my-20 md:hidden">
      <h1 class=" text-TapCard-charcoal text-3xl uppercase">DigiCard</h1>
    </div>
    <%# phone end %>
    <h1 class="hidden text-center md:block text-2xl my-3 ">Login</h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs md:flex md:flex-col md:justify-center md:space-y-2">
        <div class="text-center md:relative md:w-[85%] md:mx-auto">
          <%= f.label :email, class: "hidden md:block md:absolute" %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: " rounded w-[85%] md:w-full md:mt-8 md:py-2 md:px-4 md:bg-TapCard-lightGray md:border-none" },
                      label_html: { class: "block md:hidden" } %>
        </div>
        <div class="text-center md:relative md:w-[85%] md:mx-auto">
          <%= f.label :password, class: "hidden md:block md:absolute" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "rounded w-[85%] md:w-full md:mt-8 md:py-2 md:px-4 md:bg-TapCard-lightGray md:border-none" },
                      label_html: { class: "block md:hidden" } %>
        </div>
        <div class="px-8 flex w-full justify-between sm:px-10 md:px-6 md:text-sm 2xl:px-8">
          <%= f.input :remember_me,
                      input_html: { class: "rounded mr-2 md:w-3 md:h-3 2xl:w-4 2xl:h-4" },
                      as: :boolean if devise_mapping.rememberable? %>
          <%= link_to "Forgot password", new_user_password_path, class: "text-TapCard-blue" %>
        </div>
      </div>

      <div class="form-actions flex items-center justify-center">
        <%= f.button :submit, "Log in", class: "md:cursor-pointer my-6 py-1 px-5 bg-TapCard-blue rounded-full text-TapCard-lightGray md:bg-TapCard-yellow md:text-TapCard-charcoal" %>
      </div>
    <% end %>

    <div class=" mx-2 mt-3">
      <%= link_to "Sign up", new_user_registration_path, class: "md:my-6 md:py-1 md:px-5 md:bg-TapCard-blue md:rounded-full md:text-TapCard-lightGray" %>
    </div>

  </div>
</div>

