<div class="w-full fixed">
    <div class="flex w-full justify-between items-center pt-8 pb-3 pr-3  bg-TapCard-charcoal">
    <div class="w-5"></div>
    <div class="flex-1 text-center ml-3">
        <h2 class="mx-auto text-TapCard-lightGray uppercase font-bold font-jost">Events</h2>
    </div>
    <%# Link à changer quand la chatroom sera mis en place %>
    <%= link_to user_path(current_user) do %>
        <%= image_tag "envelope-regular.svg", alt: "envelope", class: "w-5" %>
    <% end %>
    </div>
    <div class="flex justify-between bg-TapCard-lightGray border-b border-TapCard-blue px-4 py-3">
        <%= link_to events_path do %>
            <h6 class="text-xs font-semibold font-jost relative after:block after:h-0.5 after:w-1/2 after:absolute after:-bottom-1 after:left-1/4 after:origin-bottom-left after:transform after:ease-in-out after:duration-200 after:bg-TapCard-yellow">All Upcoming Events</h6>
        <% end %>
        <%= link_to my_events_user_path(current_user) do %>
            <h6 class="text-xs font-semibold font-jost">My Events</h6>
        <% end %>
    </div>

</div>
<div class=" pt-28"></div>
<% @events.each do |event| %>
    <div class="p-3 border-y border-TapCard-blue">
        <div class="flex items-start justify-between ">
            <%= link_to event_path(event) do %>
                <p class="px-2 text-xs rounded outline outline-2 outline-TapCard-yellow text-TapCard-yellow font-semibold">En savoir +</p>
            <% end %>
            <% if event.logo.attached? %>
                <%= cl_image_tag current_user.logo.key, alt: "Logo to #{event.title}", class: " object-cover object-center w-14 h-14 shadow-md" %>
            <% else %>    
                <%= image_tag("logo_event.svg", class: " w-14 h-14 bg-cover bg-center") %>
            <% end %>
            <% if @participations[event.id] %>
                <div class="flex flex-col items-start justify-start">
                    <%= link_to "Inscrit", event_path(event), class: "px-5  text-xs  rounded outline outline-2 outline-green-500 text-green-500 font-semibold" %>
                </div>
            <% else %>
                <div data-controller="overlay" class="flex flex-col items-start justify-start">
                    <button data-action="click->overlay#toggle" class="px-2 text-xs rounded outline outline-2 outline-TapCard-blue text-TapCard-blue font-semibold">S'inscrire</button>
                    <div data-overlay-target="overlay" class="hidden fixed top-0 left-0 w-full h-full bg-rgba justify-center items-center text-white z-50">
                        <div data-overlay-target="modal" class="hidden mx-2 relative w-72 h-auto bg-TapCard-charcoal py-5 px-4 text-center rounded-xl content-between">
                            <div class="flex justify-between mb-3">
                                <div class="w-5"></div>
                                <% if event.logo.attached? %>
                                    <%= cl_image_tag current_user.logo.key, alt: "Logo to #{event.title}", class: " object-cover object-center w-14 h-14 shadow-md" %>
                                <% else %>    
                                    <%= image_tag("logo_event.svg", class: " w-14 h-14 bg-cover bg-center") %>
                                <% end %>
                                <button data-action="click->overlay#closeModal" class="flex justify-start">
                                    <i class="fa-solid fa-xmark text-TapCard-yellow w-5"></i>
                                </button>
                            </div>
                            <div class="mb-3">
                                <p class="text-xs">Veuillez confirmer votre présence lors du <%= event.title.capitalize %>.</p>
                            </div>
                            <div class="flex justify-center items-center h-full">
                                <div class="space-y-1 flex flex-col justify-start text-left">
                                    <div class="flex items-center text-xs font-light">
                                        <div class="flex items-center space-x-1">
                                            <i class="fa-solid fa-calendar-days text-TapCard-yellow"></i>
                                            <p class="text-left">Du <%= event.start_time.day %> au <%= l(event.end_time, format:'%d %b', locale: :fr) %></p>
                                        </div>
                                    </div>
                                    <div class="flex items-center">
                                        <div class="flex items-center text-xs font-light space-x-2">
                                            <i class="fa-solid fa-map-pin text-TapCard-yellow"></i>
                                            <p class="text-left"><%= event.city.capitalize %>, <%= event.country.capitalize %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%# Ajouter un input pour la validation du code + faire un checkbox pour donner l'accord d'apparition ( ajouter une colonne sur la table participation 'accord' en boolean) %>
                            <%= simple_form_for([event], url: event_participations_path(event), method: :post) do |f| %>
                                <%= f.hidden_field :event_id, value: event.id %>
                                <%= f.input :registration_code,
                                            input_html: { autocomplete: "CODE D'INSCRIPTION", value: "", placeholder: "CODE D'INSCRIPTION", class: "rounded-md w-[70%] h-8 mx-3 mt-3 text-xs text-center placeholder:text-slate-400 text-TapCard-charcoal" },
                                            label_html: { class: "hidden" }  %>
                                <p class="text-[11px] tracking-tight leading-3 text-left italic">Votre code d’inscription DigiCard vous est fourni dans votre e-mail de confirmation de l’achat de votre badge/ticket qui vous donne accès à l’évènement.</p>
                                <div class="text-left leading-none mb-2">
                                    <p class="text-[11px] font-semibold italic text-left mt-1">Vous n’avez pas de badge ? </p>
                                    <a href="https://<%= event.link %>" target="_blank" class="text-[11px] italic ">Rendez vous <span class=" text-TapCard-yellow">ici</span></a>
                                </div>
                                <div class="border-b border-TapCard-yellow w-[75%] mx-auto my-4"></div>
                                <div class="form-actions">
                                    <div class="py-1 px-0 mx-6 bg-TapCard-yellow text-gray-100 font-medium rounded-md transition-all duration-150 ease-in-out hover:text-white hover:scale-105 sm:place-self-center uppercase">
                                        <%= f.button :submit,
                                                value: "Confirmer",
                                                class: "uppercase text-lg font-semibold font-jost",
                                                data: { action: "click->overlay#closeModal" } %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <h2 class="text-center my-2 text-sm font-semibold font-jost"><%= event.title %></h2>
        <div class="flex justify-center items-center h-full">
            <div class="space-y-1 flex flex-col justify-start text-left">
                <div class="flex items-center space-x-2">
                    <div class="flex items-center text-xs font-light space-x-2">
                        <i class="fa-solid fa-map-pin text-TapCard-yellow"></i>
                        <p class="text-left"><%= event.city.capitalize %>, <%= event.country.capitalize %></p>
                    </div>
                </div>
                <div class="flex items-center text-xs font-light space-x-2">
                    <div class="flex items-center space-x-2">
                        <i class="fa-solid fa-calendar-days text-TapCard-yellow"></i>
                        <p class="text-left">Du <%= event.start_time.day %> au <%= l(event.end_time, format:'%d %b', locale: :fr) %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>


